        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LibraryPlatform.Views.Admin"
        mc:Ignorable="d"
        Title="Админ" Height="421" Width="296" ResizeMode="CanMinimize" Icon="/Images/icon.ico">
