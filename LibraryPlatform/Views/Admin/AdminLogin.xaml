<Window x:Class="LibraryPlatform.Views.Admin.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LibraryPlatform.Views.Admin"
        mc:Ignorable="d"
        Title="Авторизация" Height="240" Width="364" Icon="/Images/icon.ico" KeyDown="Window_KeyDown" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="passwordLabel" Style="{DynamicResource MaterialDesignLabel}" Content="Пароль" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="102" Margin="10,13,0,0" FontSize="18"/>
        <Button x:Name="enterButton" Content="Войти" HorizontalAlignment="Center" Height="50" Margin="0,137,0,0" VerticalAlignment="Top" Width="179" Click="enterButton_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="179" Height="35" FontSize="18"/>

    </Grid>
</Window>
